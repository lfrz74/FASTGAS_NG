            ],
            "responses": {
                "200": {
                  "description": "OK",
                  "content": {
                    "application/json": { 
                      "schema": { 
                        "$ref": "#/components/schemas/usuario_consulta" 
                      }
                    }
                  }
                },
                "404": {
                  "description": "Usuario no encontrado..!"
                },
                "500": {
                  "description": "Error en consultarUsuarioPorId: "
                }                  
            },
            "security": [
              {
                "bearerAuth": []
              }
            ]
          }
      }
    },
