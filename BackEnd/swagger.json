    "paths": {
      "/autorizar/loguear": {
          "post": {
              "tags": [
                  "Autorización"
              ],
              "summary": "Método para validar las credenciales del usuario y devolver el token de validación",
              "responses": {
                  "202": {
                    "description": "Accepted",
                    "content": {
                      "application/json": { 
                        "schema": { 
                          "$ref": "#/components/schemas/loguear_salida" 
                        } 
                      }
                    }                
                  },
                  "401": {
                    "description": "Usuario no encontrado..! | Datos ingresados erróneos..!"
                  },
                  "412": {
                    "description": "Datos ingresados erróneos..!"
                  },
                  "500": {
                    "description": "Ocurrió un error al Loguear..! | Ocurrió un error al loguear el usuario..!"
                  }                  
              },
              "requestBody": {
                "$ref": "#/components/requestBodies/loguear_entrada"
              }
          }
      },
      "/usuario/crear": {
          "post": {
              "tags": [
                  "Usuario"
              ],
              "summary": "Método para crear un usuario",
              "responses": {
                  "201": {
                      "description": "OK",
                      "content": {
                        "application/json": { 
                          "schema": { 
                            "$ref": "#/components/schemas/usuario_consulta" 
                          } 
                        }
                      }                
                  },
                  "412": {
                    "description": "Datos ingresados incorrectos..!"
                  },
                  "500": {
                    "description": "Datos ingresados incorrectos..! | Ocurrió un error al crear el usuario..!"
                  }                  
              },
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "requestBody": {
                "$ref": "#/components/requestBodies/usuario_post"
              }
          }
      },
      "/usuario/actualizar1/{userId}": {
          "put": {
              "tags": [
                  "Usuario"
              ],
              "summary": "Actualizar Usuario: se actualiza uno o varios campos, según se envíe en forma dinámica en el body",
              "parameters": [
                {
                  "name": "userId",
                  "in": "path",
                  "description": "User ID",
                  "required": true,
                  "schema": {
                    "type": "integer",
                    "format": "int64"
                  }
                }
              ],
              "responses": {
                  "200": {
                      "description": "No content"
                  },
                  "412": {
                    "description": "Datos ingresados incorrectos..!"
                  },
                  "500": {
                    "description": "Datos ingresados incorrectos..! | Ocurrió un error al crear el usuario..!"
                  }                     
              },
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "requestBody": {
                "$ref": "#/components/requestBodies/usuario_actualizar"
              }
          }
      },
      "/usuario/eliminar/{userId}": {
        "delete": {
          "tags": [
            "Usuario"
          ],
          "summary": "Eliminar usuario por Id",
          "description": "",
          "parameters": [
            {
              "name": "userId",
              "in": "path",
              "description": "User id",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Usuario eliminado exitosamente..!"
            },
            "500": {
              "description": "Usuario no encontrado..! | Error al eliminar el usuario..!  | Error al buscar el usuario..!  | Error en método eliminar usuario..!   "
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/usuario/consultar": {
          "get":{
            "tags": [
                "Usuario"
            ],
            "summary": "Consultar todos los usuarios",              
            "security": [
                {
                   "bearerAuth": []
                }
            ],                
            "responses": {
              "200": {
                "description": "OK",
                "content": {
                  "application/json": { 
                    "schema": { 
                      "$ref": "#/components/schemas/usuarios_consulta" 
                    } 
                  }
                }                
              },
              "404": {
                "description": "No se encontraron usuarios..!"
              },
              "500": {
                "description": "Error en consultarUsuario: "
              }              
            }
          }
      },
      "/usuario/consultar/{userId}": {
          "get":{
            "tags": [
                "Usuario"
            ],
            "summary": "Consultar Usuario por Id",
            "parameters": [
              {
                "name": "userId",
                "in": "path",
                "description": "User id",
                "required": true,
                "schema": {
                  "type": "integer",
